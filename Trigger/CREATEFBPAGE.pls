create or replace TRIGGER CREATEFBPAGE 
AFTER INSERT ON SECTION 
FOR EACH ROW
DECLARE
  ADMIN_ID2 VARCHAR(30);
  PAGE_NAME2 VARCHAR(16);
BEGIN
  SELECT EMAIL INTO ADMIN_ID2 FROM PERSON, FACULTY_PERSON WHERE LECTURERNO=:NEW.LECTURERNO AND PERSON.TCNUMBER=FACULTY_PERSON.TCNUMBER;
  SELECT COURSENAME INTO PAGE_NAME2 FROM COURSE WHERE COURSENO=:NEW.COURSENO;
  INSERT INTO FBPAGE(PAGE_ID, PAGE_NAME, ADMIN_ID) VALUES(:NEW.SECTIONNO,PAGE_NAME2||' '||:NEW.SECTIONNO,ADMIN_ID2);
END;